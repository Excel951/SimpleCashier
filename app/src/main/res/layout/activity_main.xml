<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rectanglebg"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5px">

        <Button
            android:id="@+id/esTehBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="25px"
            android:backgroundTint="@color/pilihMenu"
            android:padding="20px"
            android:text="Es Teh" />

        <Button
            android:id="@+id/esJerukBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="25px"
            android:backgroundTint="@color/pilihMenu"
            android:padding="20px"
            android:text="Es Jeruk" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5px">

        <Button
            android:id="@+id/nasiPecelBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="25px"
            android:backgroundTint="@color/pilihMenu"
            android:padding="20px"
            android:text="Nasi Pecel" />

        <Button
            android:id="@+id/nasiRawonBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="25px"
            android:backgroundTint="@color/pilihMenu"
            android:padding="20px"
            android:text="Nasi Rawon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5px">

        <Button
            android:id="@+id/byrBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="25px"
            android:backgroundTint="@color/bayar"
            android:padding="20px"
            android:text="Bayar" />

        <Button
            android:id="@+id/btlBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="25px"
            android:backgroundTint="@color/batal"
            android:padding="20px"
            android:text="Batal" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAboutme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:backgroundTint="@color/black"
        android:text="About ME" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/myCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>